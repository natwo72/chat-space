.side
  .side__header
    .side__header__items
      %h3.side__header__items__name
        = current_user.name
      .side__header__items__icon
        = link_to new_group_path do
          = icon('fas', 'pen-square',  class: "side__header__items__icon")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog',  class: "side__header__items__icon")
  .side__main
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__text
            = group.show_last_message


