.main
  .main__header
    .main__header__left-box
      .main__header__left-box__group
        = @group.name
      .main__header__left-box__member-list
        Member:
        - @group.users.each do |user|
          = user.name
    .main__header__edit-btn
      = link_to "Edit", edit_group_path(current_user)
  .main__chat
    = render @messages
  .main__form
    = form_for [@group, @message], html: {class: "message-form"} do |f|
      .input-box
        = f.text_field :content, class: "text", placeholder: 'type a message'
        = f.label :image, class: "input-box__label" do
          = icon('fas', 'image')
          = f.file_field :image, class: 'input-box__label-file'
      = f.submit 'Send', class: 'submit-btn'